---
// src/pages/admin/articles/index.astro
// 文章列表管理

export const prerender = false;

import AdminLayout from '@layouts/AdminLayout.astro';
import { db } from '@lib/db';
import { articles } from '@lib/db/schema';
import { desc, like, eq, and } from 'drizzle-orm';

const title = '文章管理';

// 获取查询参数
const search = Astro.url.searchParams.get('search') || '';
const categoryFilter = Astro.url.searchParams.get('category') || '';
const statusFilter = Astro.url.searchParams.get('status') || '';

// 构建查询条件
const conditions = [];
if (search) {
  conditions.push(like(articles.title, `%${search}%`));
}
if (categoryFilter) {
  conditions.push(eq(articles.category, categoryFilter));
}
if (statusFilter) {
  conditions.push(eq(articles.status, statusFilter));
}

// 从数据库获取文章列表
const whereClause = conditions.length > 0 ? and(...conditions) : undefined;
const articleList = whereClause 
  ? await db.select().from(articles).where(whereClause).orderBy(desc(articles.createdAt))
  : await db.select().from(articles).orderBy(desc(articles.createdAt));

const categories = ['urinary-health', 'kidney-disease', 'reviews', 'care-tips'];

// 检查成功消息
const successMessage = Astro.url.searchParams.get('success');
const errorMessage = Astro.url.searchParams.get('error');
---

<AdminLayout title={title}>
  <!-- 消息提示 -->
  {successMessage && (
    <div class="mb-4 p-4 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 rounded-lg">
      {successMessage === 'created' && '文章创建成功！'}
      {successMessage === 'updated' && '文章更新成功！'}
      {successMessage === 'deleted' && '文章删除成功！'}
    </div>
  )}
  {errorMessage && (
    <div class="mb-4 p-4 bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-400 rounded-lg">
      {errorMessage === 'slug-exists' && 'URL Slug 已存在，请使用其他名称。'}
      {errorMessage === 'save-failed' && '保存失败，请重试。'}
      {errorMessage === 'not-found' && '文章不存在。'}
    </div>
  )}

  <!-- 顶部操作栏 -->
  <div class="flex items-center justify-between mb-6">
    <div class="flex items-center gap-4">
      <!-- 搜索 -->
      <form method="GET" class="flex items-center gap-4">
        <div class="relative">
          <input
            type="text"
            name="search"
            placeholder="搜索文章..."
            class="admin-input pl-10 w-64"
            value={search}
          />
          <svg class="w-4 h-4 absolute left-3 top-1/2 -translate-y-1/2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
        </div>
        
        <!-- 分类筛选 -->
        <select name="category" class="admin-input w-40">
          <option value="">所有分类</option>
          {categories.map((cat) => (
            <option value={cat} selected={categoryFilter === cat} class="capitalize">{cat}</option>
          ))}
        </select>
        
        <!-- 状态筛选 -->
        <select name="status" class="admin-input w-32">
          <option value="">所有状态</option>
          <option value="published" selected={statusFilter === 'published'}>已发布</option>
          <option value="scheduled" selected={statusFilter === 'scheduled'}>定时发布</option>
          <option value="draft" selected={statusFilter === 'draft'}>草稿</option>
        </select>
        
        <button type="submit" class="admin-btn admin-btn-secondary">筛选</button>
      </form>
    </div>
    
    <div class="flex items-center gap-3">
      <!-- 导入按钮 -->
      <button id="import-btn" class="admin-btn admin-btn-secondary">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"/>
        </svg>
        导入
      </button>
      
      <!-- 导出按钮 -->
      <div class="relative">
        <button id="export-btn" class="admin-btn admin-btn-secondary">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
          </svg>
          导出
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </button>
        <div id="export-menu" class="hidden absolute right-0 mt-2 w-40 bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 z-10">
          <a href="/api/admin/articles/export?format=json" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-t-lg">
            导出为 JSON
          </a>
          <a href="/api/admin/articles/export?format=csv" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-b-lg">
            导出为 CSV
          </a>
        </div>
      </div>
      
      <a href="/admin/articles/new" class="admin-btn admin-btn-primary">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        新建文章
      </a>
    </div>
  </div>
  
  <!-- 导入文件输入（隐藏） -->
  <input type="file" id="import-file" accept=".json,.csv" class="hidden" />
  
  <!-- 文章列表 -->
  <div class="admin-card">
    {articleList.length === 0 ? (
      <div class="text-center py-12 text-gray-500 dark:text-gray-400">
        <svg class="w-12 h-12 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <p>暂无文章</p>
        <a href="/admin/articles/new" class="text-primary-600 dark:text-primary-400 hover:underline mt-2 inline-block">
          创建第一篇文章
        </a>
      </div>
    ) : (
      <table class="admin-table">
        <thead>
          <tr>
            <th class="w-8">
              <input type="checkbox" class="rounded" />
            </th>
            <th>标题</th>
            <th>分类</th>
            <th>状态</th>
            <th>推荐</th>
            <th>日期</th>
            <th class="w-32">操作</th>
          </tr>
        </thead>
        <tbody>
          {articleList.map((article) => (
            <tr>
              <td>
                <input type="checkbox" class="rounded" />
              </td>
              <td>
                <div>
                  <a 
                    href={`/admin/articles/${article.id}`}
                    class="font-medium text-gray-900 dark:text-white hover:text-primary-600 dark:hover:text-primary-400"
                  >
                    {article.title}
                  </a>
                  <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">/{article.slug}</p>
                </div>
              </td>
              <td>
                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 capitalize">
                  {article.category}
                </span>
              </td>
              <td>
                {article.status === 'published' ? (
                  <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400">
                    已发布
                  </span>
                ) : article.status === 'scheduled' ? (
                  <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-400">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    定时
                  </span>
                ) : (
                  <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-yellow-100 dark:bg-yellow-900/30 text-yellow-700 dark:text-yellow-400">
                    草稿
                  </span>
                )}
              </td>
              <td>
                {article.featured && (
                  <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                )}
              </td>
              <td class="text-gray-500 dark:text-gray-400">
                <button 
                  class="edit-date-btn hover:text-primary-600 dark:hover:text-primary-400 cursor-pointer text-left"
                  data-article-id={article.id}
                  data-published-at={article.publishedAt || ''}
                  data-scheduled-at={article.scheduledAt || ''}
                  data-status={article.status}
                >
                  {article.status === 'scheduled' && article.scheduledAt ? (
                    <div>
                      <span class="text-blue-600 dark:text-blue-400 text-xs">
                        {new Date(article.scheduledAt).toLocaleString('zh-CN', {
                          month: 'short',
                          day: 'numeric',
                          hour: '2-digit',
                          minute: '2-digit'
                        })}
                      </span>
                      <p class="text-xs text-gray-400">定时发布</p>
                    </div>
                  ) : article.publishedAt ? (
                    <div>
                      <span class="text-sm">
                        {new Date(article.publishedAt).toLocaleDateString('zh-CN')}
                      </span>
                      <p class="text-xs text-gray-400">点击修改</p>
                    </div>
                  ) : (
                    <div>
                      <span class="text-sm">
                        {new Date(article.createdAt!).toLocaleDateString('zh-CN')}
                      </span>
                      <p class="text-xs text-gray-400">未发布</p>
                    </div>
                  )}
                </button>
              </td>
              <td>
                <div class="flex items-center gap-2">
                  <a
                    href={`/admin/articles/${article.id}`}
                    class="text-primary-600 dark:text-primary-400 hover:underline text-sm"
                  >
                    编辑
                  </a>
                  <button
                    class="text-red-600 dark:text-red-400 hover:underline text-sm"
                    data-delete-article={article.id}
                  >
                    删除
                  </button>
                </div>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    )}
    
    <!-- 分页 -->
    <div class="flex items-center justify-between mt-6 pt-4 border-t border-gray-200 dark:border-gray-700">
      <p class="text-sm text-gray-500 dark:text-gray-400">
        共 {articleList.length} 篇文章
      </p>
    </div>
  </div>
</AdminLayout>

<script>
  // 删除确认
  document.querySelectorAll('[data-delete-article]').forEach((btn) => {
    btn.addEventListener('click', async () => {
      const id = (btn as HTMLElement).getAttribute('data-delete-article');
      if (!id) return;
      if (confirm('确定要删除这篇文章吗？此操作不可恢复。')) {
        try {
          const response = await fetch(`/api/admin/articles/${id}`, { method: 'DELETE' });
          const result = await response.json();
          if (result.success) {
            window.location.href = '/admin/articles?success=deleted';
          } else {
            alert('删除失败：' + (result.error || '未知错误'));
          }
        } catch (error) {
          alert('删除失败，请重试。');
        }
      }
    });
  });

  // 导出菜单切换
  const exportBtn = document.getElementById('export-btn');
  const exportMenu = document.getElementById('export-menu');
  
  exportBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    exportMenu?.classList.toggle('hidden');
  });
  
  document.addEventListener('click', () => {
    exportMenu?.classList.add('hidden');
  });

  // 导入功能
  const importBtn = document.getElementById('import-btn');
  const importFile = document.getElementById('import-file') as HTMLInputElement;
  
  importBtn?.addEventListener('click', () => {
    importFile?.click();
  });
  
  importFile?.addEventListener('change', async (e) => {
    const file = (e.target as HTMLInputElement).files?.[0];
    if (!file) return;
    
    if (!file.name.endsWith('.json') && !file.name.endsWith('.csv')) {
      alert('仅支持 JSON 和 CSV 格式');
      return;
    }
    
    if (!confirm(`确定要导入 ${file.name} 吗？这将创建新文章。`)) {
      return;
    }
    
    const formData = new FormData();
    formData.append('file', file);
    
    try {
      // Read file content and send as JSON to avoid multipart size issues
      const fileText = await file.text();

      if (!fileText || fileText.trim() === '') {
        alert('文件内容为空，请检查文件');
        return;
      }

      let body: string;
      const headers: Record<string, string> = { 'Content-Type': 'application/json' };

      if (file.name.endsWith('.json')) {
        // Validate and re-serialize to ensure clean JSON
        const parsed = JSON.parse(fileText);
        body = JSON.stringify(parsed);
      } else {
        // CSV: fall back to formData
        const fd = new FormData();
        fd.append('file', file);
        const response = await fetch('/api/admin/articles/import', {
          method: 'POST',
          body: fd,
          credentials: 'include',
        });
        const result = await response.json();
        if (response.ok) {
          alert(`导入完成！\n成功: ${result.success} 篇\n失败: ${result.failed} 篇`);
          window.location.reload();
        } else {
          alert('导入失败: ' + (result.error || '未知错误'));
        }
        return;
      }

      const response = await fetch('/api/admin/articles/import', {
        method: 'POST',
        body,
        headers,
        credentials: 'include',
      });
      
      const result = await response.json();
      
      if (response.ok) {
        let message = `导入完成！\n成功: ${result.success} 篇\n失败: ${result.failed} 篇`;
        
        if (result.created.authors.length > 0) {
          message += `\n\n新建作者: ${result.created.authors.join(', ')}`;
        }
        if (result.created.categories.length > 0) {
          message += `\n新建分类: ${result.created.categories.join(', ')}`;
        }
        if (result.created.tags.length > 0) {
          message += `\n新建标签: ${result.created.tags.join(', ')}`;
        }
        
        if (result.errors.length > 0) {
          message += `\n\n错误:\n${result.errors.slice(0, 5).join('\n')}`;
          if (result.errors.length > 5) {
            message += `\n... 还有 ${result.errors.length - 5} 个错误`;
          }
        }
        
        alert(message);
        window.location.reload();
      } else {
        alert('导入失败: ' + (result.error || '未知错误'));
      }
    } catch (error) {
      alert('导入失败，请重试。');
      console.error(error);
    }
    
    // 重置文件输入
    importFile.value = '';
  });

  // 快速编辑发布时间
  document.querySelectorAll('.edit-date-btn').forEach((btn) => {
    btn.addEventListener('click', async (e) => {
      const target = e.currentTarget as HTMLElement;
      const articleId = parseInt(target.getAttribute('data-article-id') || '0');
      const currentPublishedAt = target.getAttribute('data-published-at') || '';
      const currentScheduledAt = target.getAttribute('data-scheduled-at') || '';
      const currentStatus = target.getAttribute('data-status') || 'draft';
      
      // 创建弹窗
      const modal = document.createElement('div');
      modal.className = 'fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50';
      modal.innerHTML = `
        <div class="bg-white dark:bg-gray-800 rounded-lg p-6 max-w-md w-full mx-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">修改发布时间</h3>
          
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                状态
              </label>
              <select id="edit-status" class="admin-input w-full">
                <option value="draft" ${currentStatus === 'draft' ? 'selected' : ''}>草稿</option>
                <option value="published" ${currentStatus === 'published' ? 'selected' : ''}>已发布</option>
                <option value="scheduled" ${currentStatus === 'scheduled' ? 'selected' : ''}>定时发布</option>
              </select>
            </div>
            
            <div id="published-date-field" class="${currentStatus === 'published' ? '' : 'hidden'}">
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                发布时间
              </label>
              <input 
                type="datetime-local" 
                id="edit-published-at" 
                class="admin-input w-full"
                value="${currentPublishedAt ? new Date(currentPublishedAt).toISOString().slice(0, 16) : ''}"
              />
            </div>
            
            <div id="scheduled-date-field" class="${currentStatus === 'scheduled' ? '' : 'hidden'}">
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                定时发布时间
              </label>
              <input 
                type="datetime-local" 
                id="edit-scheduled-at" 
                class="admin-input w-full"
                value="${currentScheduledAt ? new Date(currentScheduledAt).toISOString().slice(0, 16) : ''}"
              />
            </div>
          </div>
          
          <div class="flex items-center gap-3 mt-6">
            <button id="save-date-btn" class="admin-btn admin-btn-primary flex-1">
              保存
            </button>
            <button id="cancel-date-btn" class="admin-btn admin-btn-secondary flex-1">
              取消
            </button>
          </div>
        </div>
      `;
      
      document.body.appendChild(modal);
      
      // 状态切换显示对应字段
      const statusSelect = modal.querySelector('#edit-status') as HTMLSelectElement;
      const publishedField = modal.querySelector('#published-date-field') as HTMLElement;
      const scheduledField = modal.querySelector('#scheduled-date-field') as HTMLElement;
      
      statusSelect.addEventListener('change', () => {
        const status = statusSelect.value;
        publishedField.classList.toggle('hidden', status !== 'published');
        scheduledField.classList.toggle('hidden', status !== 'scheduled');
      });
      
      // 保存
      modal.querySelector('#save-date-btn')?.addEventListener('click', async () => {
        const status = (modal.querySelector('#edit-status') as HTMLSelectElement).value;
        const publishedAt = (modal.querySelector('#edit-published-at') as HTMLInputElement).value;
        const scheduledAt = (modal.querySelector('#edit-scheduled-at') as HTMLInputElement).value;
        
        const updateData: any = {
          articleId,
          status,
        };
        
        if (status === 'published' && publishedAt) {
          updateData.publishedAt = new Date(publishedAt).toISOString();
        } else if (status === 'published') {
          updateData.publishedAt = new Date().toISOString();
        }
        
        if (status === 'scheduled' && scheduledAt) {
          updateData.scheduledAt = new Date(scheduledAt).toISOString();
        }
        
        try {
          const response = await fetch('/api/admin/articles/update-date', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(updateData),
          });
          
          if (response.ok) {
            window.location.reload();
          } else {
            alert('更新失败，请重试');
          }
        } catch (error) {
          alert('更新失败，请重试');
        }
        
        modal.remove();
      });
      
      // 取消
      modal.querySelector('#cancel-date-btn')?.addEventListener('click', () => {
        modal.remove();
      });
      
      // 点击背景关闭
      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          modal.remove();
        }
      });
    });
  });
</script>