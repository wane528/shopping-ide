---
// src/pages/admin/login.astro
// 后台登录页面

export const prerender = false;

const title = '登录';
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} | GoodSetup Admin</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen bg-gray-100 dark:bg-gray-900 flex items-center justify-center p-4">
  <div class="w-full max-w-md">
    <!-- Logo -->
    <div class="text-center mb-8">
      <div class="w-16 h-16 mx-auto rounded-xl bg-primary-500 flex items-center justify-center mb-4">
        <span class="text-white font-bold text-2xl">GS</span>
      </div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">GoodSetup Admin</h1>
      <p class="text-gray-500 dark:text-gray-400 mt-2">后台管理系统</p>
    </div>
    
    <!-- 登录表单 -->
    <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
      <form action="/api/admin/login" method="POST" class="space-y-4">
        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
            管理密码
          </label>
          <input
            type="password"
            id="password"
            name="password"
            required
            class="w-full px-3 py-2 text-sm bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none"
            placeholder="请输入管理密码"
          />
        </div>
        
        <button
          type="submit"
          class="w-full bg-primary-500 text-white py-2 px-4 rounded-lg font-medium hover:bg-primary-600 transition-colors"
        >
          登录
        </button>
      </form>
      
      <p class="mt-4 text-xs text-gray-500 dark:text-gray-400 text-center">
        初期密码保护方案，请在环境变量中设置 ADMIN_PASSWORD
      </p>
    </div>
  </div>
</body>
</html>
