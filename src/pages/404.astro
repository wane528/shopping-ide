---
// src/pages/404.astro
import BaseLayout from '@layouts/BaseLayout.astro';

const title = 'Page Not Found';
const description = 'The page you are looking for does not exist.';
---

<BaseLayout title={title} description={description} noindex={true}>
  <main class="flex-1 flex items-center justify-center py-20">
    <div class="container-content text-center">
      <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-muted dark:bg-gray-800 flex items-center justify-center">
        <svg class="w-10 h-10 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      
      <h1 class="text-h1 text-gray-900 dark:text-white mb-4">
        Page Not Found
      </h1>
      <p class="text-body-l text-gray-500 dark:text-gray-400 mb-8 max-w-md mx-auto">
        The page you're looking for doesn't exist or has been moved.
      </p>
      
      <div class="flex flex-col sm:flex-row items-center justify-center gap-3">
        <a href="/" class="btn btn-primary">
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
          Back to Home
        </a>
        <a href="/category/guides" class="btn btn-secondary">
          Browse Guides
        </a>
      </div>
    </div>
  </main>
</BaseLayout>