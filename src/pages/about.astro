---
// src/pages/about.astro
import BaseLayout from '@layouts/BaseLayout.astro';
import Breadcrumb from '@components/common/Breadcrumb.astro';
import { generateOrganizationSchema } from '@lib/seo';

const title = 'About';
const description = 'Learn about PuraCatCare ‚Äî our mission to help cat owners understand and manage feline urinary and kidney health with pure, science-backed information.';

const values = [
  {
    title: 'Vet-Informed Content',
    description: 'Our articles are researched with veterinary guidance and reference peer-reviewed studies whenever possible.',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
    </svg>`,
  },
  {
    title: 'Cat Owner First',
    description: 'We write for worried cat parents, not search engines. Clear, actionable, and compassionate content.',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
    </svg>`,
  },
  {
    title: 'Honest Product Reviews',
    description: 'Unbiased reviews of prescription diets, supplements, and hydration products. We disclose all affiliate relationships.',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
    </svg>`,
  },
  {
    title: 'Always Up to Date',
    description: 'We continuously update our guides to reflect the latest veterinary research and product availability.',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
    </svg>`,
  },
];

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'About' },
];
---

<BaseLayout title={title} description={description}>
  <main class="py-8 md:py-12">
    <div class="container-content">
      <Breadcrumb items={breadcrumbs} />
      
      <header class="mb-12">
        <h1 class="text-h1 text-gray-900 dark:text-white mb-4">
          About PuraCatCare
        </h1>
        <p class="text-body-l text-gray-600 dark:text-gray-400 max-w-3xl">
          We help cat owners understand, prevent, and manage feline urinary tract problems and kidney disease ‚Äî with clear, evidence-based information you can trust. Pure science for cat health.
        </p>
      </header>
      
      <section class="mb-16">
        <div class="card bg-gray-50/50 dark:bg-gray-800/50 border-0 p-8 md:p-10">
          <div class="max-w-3xl">
            <h2 class="text-h2 text-gray-900 dark:text-white mb-4">Our Mission</h2>
            <p class="text-body-l text-gray-600 dark:text-gray-400 mb-6">
              Urinary and kidney problems are among the most common ‚Äî and most stressful ‚Äî health issues cat owners face. We created PuraCatCare to be the resource we wished existed: a single, trustworthy place for understanding symptoms, treatment options, dietary management, and product recommendations.
            </p>
            <p class="text-body-s text-gray-500 dark:text-gray-400">
              Every article is written with care, reviewed for accuracy, and designed to help you have better conversations with your veterinarian. We are not a substitute for professional veterinary advice ‚Äî we're a companion to it.
            </p>
          </div>
        </div>
      </section>
      
      <section class="mb-16">
        <h2 class="text-h2 text-gray-900 dark:text-white mb-8">What We Stand For</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {values.map((value) => (
            <div class="card group">
              <div class="w-10 h-10 rounded-lg bg-primary-50 dark:bg-primary-900/30 flex items-center justify-center text-primary-600 dark:text-primary-400 mb-4">
                <Fragment set:html={value.icon} />
              </div>
              <h3 class="font-semibold text-gray-900 dark:text-white mb-2">{value.title}</h3>
              <p class="text-body-s text-gray-500 dark:text-gray-400">{value.description}</p>
            </div>
          ))}
        </div>
      </section>
      
      <section class="mb-16">
        <h2 class="text-h2 text-gray-900 dark:text-white mb-8">What We Cover</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
          <div class="card text-center">
            <div class="text-3xl mb-2">ü©∫</div>
            <div class="font-semibold text-gray-900 dark:text-white mb-1">Urinary Health</div>
            <p class="text-body-s text-gray-500 dark:text-gray-400">FLUTD, UTIs, crystals, blockages</p>
          </div>
          <div class="card text-center">
            <div class="text-3xl mb-2">ü´ò</div>
            <div class="font-semibold text-gray-900 dark:text-white mb-1">Kidney Disease</div>
            <p class="text-body-s text-gray-500 dark:text-gray-400">CKD stages, treatment, home care</p>
          </div>
          <div class="card text-center">
            <div class="text-3xl mb-2">‚≠ê</div>
            <div class="font-semibold text-gray-900 dark:text-white mb-1">Product Reviews</div>
            <p class="text-body-s text-gray-500 dark:text-gray-400">Prescription diets, supplements, fountains</p>
          </div>
          <div class="card text-center">
            <div class="text-3xl mb-2">üí°</div>
            <div class="font-semibold text-gray-900 dark:text-white mb-1">Care Tips</div>
            <p class="text-body-s text-gray-500 dark:text-gray-400">Hydration, nutrition, daily care</p>
          </div>
        </div>
      </section>
      
      <section class="mb-16">
        <h2 class="text-h2 text-gray-900 dark:text-white mb-6">Get in Touch</h2>
        <div class="card">
          <p class="text-body-s text-gray-600 dark:text-gray-400 mb-4">
            Have questions, corrections, or suggestions? We'd love to hear from you.
          </p>
          <a href="mailto:hello@puracatcare.help" class="flex items-center gap-2 text-primary-600 dark:text-primary-400 hover:underline text-body-s">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            hello@puracatcare.help
          </a>
        </div>
      </section>
    </div>
  </main>
  
  <script is:inline type="application/ld+json" set:html={JSON.stringify(generateOrganizationSchema())} />
</BaseLayout>
