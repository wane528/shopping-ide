---
// src/components/home/CategoryGrid.astro
const categories = [
  { 
    name: 'Guides', 
    slug: 'guides', 
    description: 'Step-by-step tutorials and comprehensive guides',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
    </svg>`
  },
  { 
    name: 'Reviews', 
    slug: 'reviews', 
    description: 'In-depth product and service reviews',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
    </svg>`
  },
  { 
    name: 'Tips', 
    slug: 'tips', 
    description: 'Quick tips and practical advice',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"/>
    </svg>`
  },
  { 
    name: 'Resources', 
    slug: 'resources', 
    description: 'Curated tools and helpful resources',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
    </svg>`
  },
];
---

<section class="section bg-gray-50 dark:bg-gray-950">
  <div class="container-content">
    <div class="text-center mb-12">
      <h2 class="text-h1 text-gray-900 dark:text-white mb-3">
        Explore by Category
      </h2>
      <p class="text-body-l text-gray-500 dark:text-gray-400 max-w-xl mx-auto">
        Find exactly what you need across our organized content categories.
      </p>
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
      {categories.map((cat) => (
        <a 
          href={`/category/${cat.slug}`} 
          class="group card card-hover text-center"
        >
          <div class="w-12 h-12 mx-auto mb-4 rounded-lg bg-primary-50 dark:bg-primary-900/30 flex items-center justify-center text-primary-600 dark:text-primary-400 group-hover:bg-primary-100 dark:group-hover:bg-primary-900/50 transition-colors">
            <Fragment set:html={cat.icon} />
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white mb-2">
            {cat.name}
          </h3>
          <p class="text-body-s text-gray-500 dark:text-gray-400">
            {cat.description}
          </p>
        </a>
      ))}
    </div>
  </div>
</section>
