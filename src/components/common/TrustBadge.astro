---
// src/components/common/TrustBadge.astro
const badges = [
  {
    icon: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
    </svg>`,
    text: 'Vet-Informed Content'
  },
  {
    icon: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
    </svg>`,
    text: 'Evidence-Based'
  },
  {
    icon: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
    </svg>`,
    text: 'Updated Monthly'
  },
];
---

<section class="section-sm bg-gray-50 dark:bg-gray-950 border-t border-gray-200 dark:border-gray-800">
  <div class="container-content">
    <div class="flex flex-wrap items-center justify-center gap-8 md:gap-16">
      {badges.map((badge) => (
        <div class="trust-badge">
          <Fragment set:html={badge.icon} />
          <span>{badge.text}</span>
        </div>
      ))}
    </div>
  </div>
</section>
