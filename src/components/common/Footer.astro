---
// src/components/common/Footer.astro
const currentYear = new Date().getFullYear();
---

<footer class="border-t border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900">
  <div class="container-content py-12">
    <div class="flex flex-col md:flex-row justify-between items-start gap-8">
      <!-- Brand -->
      <div class="max-w-xs">
        <a href="/" class="flex items-center gap-2 text-gray-900 dark:text-white font-semibold text-lg">
          <svg class="w-6 h-6" viewBox="0 0 32 32" fill="none">
            <rect width="32" height="32" rx="8" fill="#10B981"/>
            <path d="M8 16L13 21L24 10" stroke="white" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <span>GoodSetup</span>
        </a>
        <p class="mt-3 text-body-s text-gray-500 dark:text-gray-400">
          Your guide to better setups. Quality content, honest reviews, practical tips.
        </p>
      </div>
      
      <!-- Links -->
      <div class="grid grid-cols-2 sm:grid-cols-3 gap-8 text-body-s">
        <div>
          <h4 class="font-semibold text-gray-900 dark:text-white mb-3">Content</h4>
          <ul class="space-y-2">
            <li><a href="/category/guides" class="text-gray-500 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400">Guides</a></li>
            <li><a href="/category/reviews" class="text-gray-500 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400">Reviews</a></li>
            <li><a href="/category/tips" class="text-gray-500 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400">Tips</a></li>
            <li><a href="/category/resources" class="text-gray-500 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400">Resources</a></li>
          </ul>
        </div>
        <div>
          <h4 class="font-semibold text-gray-900 dark:text-white mb-3">Company</h4>
          <ul class="space-y-2">
            <li><a href="/about" class="text-gray-500 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400">About</a></li>
            <li><a href="mailto:goodsetup@pronto.me" class="text-gray-500 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400">Contact</a></li>
          </ul>
        </div>
        <div>
          <h4 class="font-semibold text-gray-900 dark:text-white mb-3">Legal</h4>
          <ul class="space-y-2">
            <li><a href="/privacy" class="text-gray-500 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400">Privacy</a></li>
            <li><a href="/terms" class="text-gray-500 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400">Terms</a></li>
          </ul>
        </div>
      </div>
    </div>
    
    <!-- Bottom -->
    <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-800 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-caption text-gray-400 dark:text-gray-500">
        &copy; {currentYear} GoodSetup. All rights reserved.
      </p>
      <div class="flex items-center gap-4">
        <a href="https://twitter.com/goodsetup" target="_blank" rel="noopener" class="text-gray-400 hover:text-primary-500 transition-colors">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
