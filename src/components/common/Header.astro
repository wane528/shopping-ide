---
// src/components/common/Header.astro
interface Props {
  currentPath?: string;
}

const { currentPath = '' } = Astro.props;

const navLinks = [
  { href: '/category/urinary-health', label: 'Urinary Health' },
  { href: '/category/kidney-disease', label: 'Kidney Disease' },
  { href: '/category/reviews', label: 'Reviews' },
  { href: '/category/care-tips', label: 'Care Tips' },
];

const isActive = (href: string) => currentPath.startsWith(href);
---

<header class="sticky top-0 z-50 bg-white/80 dark:bg-gray-900/80 backdrop-blur-md border-b border-gray-200 dark:border-gray-800">
  <nav class="container-content h-16 flex items-center justify-between">
    <a href="/" class="flex items-center gap-2 text-gray-900 dark:text-white font-semibold text-lg">
      <img src="/images/logo.png" alt="PuraCatCare" class="h-8 w-auto" />
      <span>PuraCatCare</span>
    </a>
    
    <div class="hidden md:flex items-center gap-1">
      {navLinks.map(link => (
        <a 
          href={link.href}
          class:list={[
            'btn btn-ghost',
            isActive(link.href) && 'text-primary-600 dark:text-primary-400 bg-primary-50 dark:bg-primary-900/20'
          ]}
        >
          {link.label}
        </a>
      ))}
    </div>
    
    <div class="flex items-center gap-2">
      <button id="theme-toggle" class="btn btn-ghost p-2" aria-label="Toggle theme">
        <svg class="w-5 h-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        <svg class="w-5 h-5 block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
      </button>
      <button id="mobile-menu-toggle" class="md:hidden btn btn-ghost p-2" aria-label="Toggle menu">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
  </nav>
  
  <div id="mobile-menu" class="hidden md:hidden border-t border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900">
    <div class="container-content py-3 space-y-1">
      {navLinks.map(link => (
        <a href={link.href} class:list={['block py-2.5 px-3 text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-md', isActive(link.href) && 'text-primary-600 dark:text-primary-400 bg-primary-50 dark:bg-primary-900/20']}>
          {link.label}
        </a>
      ))}
    </div>
  </div>
</header>

<script>
  const themeToggle = document.getElementById('theme-toggle');
  themeToggle?.addEventListener('click', () => {
    const isDark = document.documentElement.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  });
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  mobileMenuToggle?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
