---
// src/components/article/ArticleCard.astro
interface Props {
  title: string;
  description: string;
  slug: string;
  category: string;
  publishedAt: string;
  readingTime?: number;
  heroImage?: string;
}

const { title, description, slug, category, publishedAt, readingTime, heroImage } = Astro.props;

const formattedDate = new Date(publishedAt).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<article class="group">
  <a href={`/${slug}/`} class="block">
    <!-- Image -->
    <div class="aspect-video rounded-md overflow-hidden mb-4 bg-gray-100 dark:bg-gray-800">
      {heroImage ? (
        <img 
          src={heroImage} 
          alt={title}
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
          loading="lazy"
        />
      ) : (
        <div class="w-full h-full bg-gradient-to-br from-primary-50 to-primary-100 dark:from-gray-800 dark:to-gray-700 flex items-center justify-center">
          <svg class="w-12 h-12 text-primary-200 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
      )}
    </div>
    
    <!-- Category Badge -->
    <span class="badge badge-primary capitalize">{category}</span>
    
    <!-- Title -->
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors line-clamp-2 mt-3 mb-2">
      {title}
    </h3>
    
    <!-- Meta -->
    <div class="flex items-center text-caption text-gray-400 dark:text-gray-500 gap-2 mb-2">
      <time datetime={publishedAt}>
        {formattedDate}
      </time>
      {readingTime && (
        <>
          <span>Â·</span>
          <span>{readingTime} min read</span>
        </>
      )}
    </div>
    
    <!-- Description -->
    <p class="text-body-s text-gray-500 dark:text-gray-400 line-clamp-2">
      {description}
    </p>
  </a>
</article>
