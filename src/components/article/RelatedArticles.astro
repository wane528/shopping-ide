---
// src/components/article/RelatedArticles.astro
import ArticleCard from './ArticleCard.astro';

interface Article {
  title: string;
  slug: string;
  category: string;
  description: string;
  readingTime: number;
  publishedAt: string;
}

interface Props {
  articles: Article[];
  title?: string;
}

const { articles, title = 'Related Articles' } = Astro.props;
---

{articles.length > 0 && (
  <section class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-800">
    <h3 class="text-h2 text-gray-900 dark:text-white mb-6">
      {title}
    </h3>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {articles.map((article) => (
        <ArticleCard {...article} />
      ))}
    </div>
  </section>
)}
