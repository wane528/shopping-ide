---
// src/components/article/ProductCard.astro
// Product recommendation card with affiliate link support

interface Props {
  name: string;
  image?: string;
  pros?: string[];
  cons?: string[];
  price?: string;
  rating?: number;
  affiliateUrl?: string;
  storeName?: string;
  badge?: string; // e.g. "Best Overall", "Best Value"
}

const {
  name,
  image,
  pros = [],
  cons = [],
  price,
  rating,
  affiliateUrl,
  storeName = 'Check Price',
  badge,
} = Astro.props;

const stars = rating ? Math.round(rating * 2) / 2 : 0;
---

<div class="product-card border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden bg-white dark:bg-gray-800">
  {badge && (
    <div class="bg-primary-500 text-white text-xs font-medium px-3 py-1 text-center">
      {badge}
    </div>
  )}
  
  <div class="p-4">
    {image && (
      <div class="aspect-square w-full max-w-[160px] mx-auto mb-3 rounded-md overflow-hidden bg-gray-50 dark:bg-gray-700">
        <img src={image} alt={name} class="w-full h-full object-contain" loading="lazy" />
      </div>
    )}
    
    <h4 class="font-semibold text-gray-900 dark:text-white text-sm mb-2">{name}</h4>
    
    {rating && (
      <div class="flex items-center gap-1 mb-2">
        <div class="flex text-amber-400" aria-label={`Rating: ${rating} out of 5`}>
          {[1, 2, 3, 4, 5].map(i => (
            <svg class={`w-3.5 h-3.5 ${i <= stars ? 'fill-current' : 'text-gray-300 dark:text-gray-600'}`} viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          ))}
        </div>
        <span class="text-xs text-gray-500 dark:text-gray-400">{rating}</span>
      </div>
    )}
    
    {pros.length > 0 && (
      <ul class="text-xs space-y-1 mb-2">
        {pros.map(pro => (
          <li class="text-green-600 dark:text-green-400">✅ {pro}</li>
        ))}
      </ul>
    )}
    
    {cons.length > 0 && (
      <ul class="text-xs space-y-1 mb-2">
        {cons.map(con => (
          <li class="text-red-500 dark:text-red-400">❌ {con}</li>
        ))}
      </ul>
    )}
    
    {price && (
      <p class="text-sm font-semibold text-gray-900 dark:text-white mb-3">{price}</p>
    )}
    
    {affiliateUrl && (
      <a
        href={affiliateUrl}
        target="_blank"
        rel="nofollow sponsored noopener"
        class="block w-full text-center text-sm font-medium px-4 py-2 rounded-md bg-primary-500 text-white hover:bg-primary-600 transition-colors"
      >
        {storeName}
      </a>
    )}
  </div>
</div>
