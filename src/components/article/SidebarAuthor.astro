---
// src/components/article/SidebarAuthor.astro
// Compact author/vet card for sidebar â€” builds E-E-A-T

interface Props {
  name: string;
  bio?: string;
  avatar?: string;
  credentials?: string;
  expertise?: string;
}

const { name, bio, avatar, credentials, expertise } = Astro.props;
---

<div class="bg-gray-50 dark:bg-gray-800/50 rounded-lg p-4">
  <h4 class="text-caption font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-3">
    About the Author
  </h4>
  <div class="flex items-start gap-3">
    <div class="w-10 h-10 rounded-full bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center flex-shrink-0 overflow-hidden">
      {avatar ? (
        <img src={avatar} alt={name} class="w-full h-full object-cover" />
      ) : (
        <span class="text-primary-600 dark:text-primary-400 font-semibold text-sm">
          {name.split(' ').map(n => n[0]).join('').slice(0, 2)}
        </span>
      )}
    </div>
    <div class="flex-1 min-w-0">
      <p class="font-semibold text-sm text-gray-900 dark:text-white">{name}</p>
      {credentials && (
        <p class="text-xs text-primary-600 dark:text-primary-400 font-medium">{credentials}</p>
      )}
    </div>
  </div>
  {bio && (
    <p class="text-xs text-gray-500 dark:text-gray-400 mt-2 leading-relaxed">{bio}</p>
  )}
  {expertise && (
    <p class="text-xs text-gray-400 dark:text-gray-500 mt-2">
      <span class="font-medium">Expertise:</span> {expertise}
    </p>
  )}
</div>
